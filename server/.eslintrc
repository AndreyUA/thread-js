{
    "extends": [
        "airbnb-base",
        "eslint:recommended"
    ],
    "env": {
        "es6": true,
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "comma-dangle": ["error", "never"],
        "object-curly-newline": "off",
        "arrow-parens": ["error", "as-needed"],
        "prefer-promise-reject-errors": "off",
        "import/prefer-default-export": "off"
        // "class-methods-use-this": "off",
    }
}
